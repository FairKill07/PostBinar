{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "JwtOptions": {
        "TokenExpirationInHours": 12,
        "SecretKey": "This is a very long secret key that should be kept safe and secure"
    },
    "AuthorizationOptions": {
        "RolePermission": [
            {
                "Role": "Owner",
                "Permissions": [ "Read", "Create", "Update", "Delete" ]
            },
            {
                "Role": "User",
                "Permissions": [ "Read", "Create" ]
            }
        ]
    }
}
